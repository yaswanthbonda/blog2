<p id="notice"><%= notice %></p>

<h1>Listing Siris</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Email confirmation</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @siris.each do |siri| %>
      <tr>
        <td><%= siri.name %></td>
        <td><%= siri.email %></td>
        <td><%= siri.email_confirmation %></td>
        <td><%= link_to 'Show', siri %></td>
        <td><%= link_to 'Edit', edit_siri_path(siri) %></td>
        <td><%= link_to 'Destroy', siri, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

