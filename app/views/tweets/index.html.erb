<p id="notice"><%= notice %></p>

<h1>Listing Tweets</h1>

<table>
  <thead>
    <tr>
      <th>Tweet</th>
      <th>Username</th>
      <th>Name</th>
      <th>Email</th>
      <th>Tweettext</th>
      <th>Hashtags</th>
      <th>Followers count</th>
      <th>Retweet count</th>
      <th>Geo location</th>
      <th>Created at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tweets.each do |tweet| %>
      <tr>
        <td><%= tweet.tweet_id %></td>
        <td><%= tweet.username %></td>
        <td><%= tweet.name %></td>
        <td><%= tweet.email %></td>
        <td><%= tweet.tweettext %></td>
        <td><%= tweet.hashtags %></td>
        <td><%= tweet.followers_count %></td>
        <td><%= tweet.retweet_count %></td>
        <td><%= tweet.geo_location %></td>
        <td><%= tweet.created_at %></td>
        <td><%= link_to 'Show', tweet %></td>
        <td><%= link_to 'Edit', edit_tweet_path(tweet) %></td>
        <td><%= link_to 'Destroy', tweet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Tweet', new_tweet_path %>
